<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.meetsl.scardview.SCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/base_white"
        app:cardCornerRadius="@dimen/base_dimen_15"
        app:cardElevation="@dimen/base_dimen_9"
        app:cardLightDirection="none"
        app:cardShadowEndColor="@color/transparent"
        app:cardShadowStartColor="#08000000">

        <LinearLayout
            android:id="@+id/body"
            android:layout_width="@dimen/base_dimen_100"
            android:layout_height="@dimen/base_dimen_100"
            android:layout_gravity="center"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progress"
                style="@style/base_custom_progressBar_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="@string/base_loading_net"
                android:textColor="#333333" />
        </LinearLayout>


    </com.meetsl.scardview.SCardView>

</FrameLayout>