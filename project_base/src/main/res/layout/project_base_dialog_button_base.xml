<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/base_shape_dialog_bg"
    android:orientation="vertical"
    android:paddingTop="@dimen/base_dimen_16">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:textColor="@color/project_base_color_text_3"
            android:textSize="@dimen/base_text_size_16"
            tools:text="this is dialog title" />


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/project_base_color_text_3"
            android:textSize="16sp" />

    </FrameLayout>


    <LinearLayout
        android:id="@+id/button_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_44"
        android:layout_marginBottom="@dimen/base_dimen_5"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_negative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="@string/project_base_cancel"
            android:textColor="@color/project_base_color_text_6"
            android:textSize="@dimen/base_text_size_14" />

        <Button
            android:id="@+id/btn_positive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/project_base_sure"
            android:textColor="@color/project_base_color_theme"
            android:textSize="@dimen/base_text_size_14" />

    </LinearLayout>
</LinearLayout>


